<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thssh.example.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义UI"
            android:textSize="20sp"
            android:padding="10dp"
            android:onClick="uiClick"/>

        <View
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_sql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手写数据库ORM"
            android:textSize="20sp"
            android:padding="10dp"
            android:onClick="ormClick"/>

        <View
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_picasso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="picasso"
            android:textSize="20sp"
            android:padding="10dp"
            android:onClick="loadImageClick"/>

        <View
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>
</ScrollView>
